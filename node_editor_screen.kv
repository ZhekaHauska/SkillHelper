#:import node_editor_screen node_editor_screen
<NodeEditorScreen>:
    name: "node_editor_screen"
    node_editor: _node_editor
    BoxLayout:
        orientation: "vertical"
        NodeEditor:
            id: _node_editor
            auto_bring_to_front: False
            add_button: _add_button
            screen_manager: root.manager
            Node:
            Node:
            Node:
        BoxLayout:
            size_hint: 1, 0.1
            Button:
                id: _add_button
                size_hint: 0.1, 1
                text: "Add"
                on_press: root.node_editor.show_bubble()
            Slider:
                min: 0.5
                max: 2
                step: 0.1
                value: 1
                on_value: root.node_editor.scale = self.value