#:import control_panel control_panel
<SkillControlPanel>:
    AnchorLayout:
        anchor_x: 'left'
        BoxLayout:
            size_hint: 0.5, 1
            Button:
                text: "New skill"
                on_press: root.screen_manager.current = 'add_skill_screen'
            HiddenTogButton:
                text: "Hidden"
                root: root
            Button:
                text: "Connections"
                on_press: root.screen_manager.current = 'node_editor_screen'

<SkillControlGroupPanel>:
    AnchorLayout:
        anchor_x: 'left'
        BoxLayout:
            size_hint: 0.5, 1
            Button:
                text: "New skill"
                on_press: root.screen_manager.current = 'add_skill_screen'
            Button:
                text: "Show all"
                on_press:
                    root.screen_manager.current = 'skills_screen'
                    root.screen_manager.skills_screen.refresh()
            Button:
                text: "Connections"
                on_press: root.screen_manager.current = 'node_editor_screen'

<TaskControlPanel>:
    AnchorLayout:
        anchor_x: 'left'
        BoxLayout:
            size_hint: 1, 1
            Button:
                text: "New task"
                on_press: root.screen_manager.current = 'add_task_screen'
            ToggleButton:
                text: "Done"
                on_press: root.screen_manager.db_tasks.toggle_view()