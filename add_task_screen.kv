#:import add_task_screen add_task_screen
<AddTaskScreen@Screen>:
    name: "add_task_screen"
    task_name: _task_name
    task_description: _task_description
    task_time: _task_time
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.3
            Button:
                size_hint: 0.1, 1
                text: "Back"
                on_press: root.manager.current = "tasks_screen"
            SHTextInput:
                id: _task_name
                text: "Task name"
                multiline: False
        SHTextInput:
            size_hint: 1, 3
            id: _task_description
            text: "Description"
        BoxLayout
            orientation: "horizontal"
            Label:
                text: "Start time:"
            TextInput:
                id: _task_time
                text: "0"
                multiline: False
        AddTaskButton:
            screen_manager: root.manager
            task_name: _task_name
            task_description: _task_description
            task_time: _task_time
            text: "Add"
            on_press: self.add_task()