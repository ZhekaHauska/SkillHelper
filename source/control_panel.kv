#:import control_panel source.control_panel
<SkillControlPanel>:
    tog_button: _tog_button
    AnchorLayout:
        anchor_x: 'left'
        BoxLayout:
            size_hint: 0.5, 1
            Button:
                text: "New skill"
                on_press: root.screen_manager.current = 'add_skill_screen'
            HiddenTogButton:
                id: _tog_button
                text: "Hidden"
                root: root
            Button:
                text: "Connections"
                on_press: root.screen_manager.current = 'node_editor_screen'

<SkillControlGroupPanel>:
    AnchorLayout:
        anchor_x: 'left'
        BoxLayout:
            size_hint: 0.5, 1
            Button:
                text: "New skill"
                on_press: root.screen_manager.current = 'add_skill_screen'
            Button:
                text: "Show all"
                on_press:
                    root.screen_manager.current = 'skills_screen'
                    root.screen_manager.skills_screen.refresh()
            Button:
                text: "Connections"
                on_press: root.screen_manager.current = 'node_editor_screen'
            Button:
                text: "Timeline"
                on_press: root.screen_manager.current = 'timeline_screen'

<TaskControlPanel>:
    tog_button: _tog_button
    AnchorLayout:
        anchor_x: 'left'
        BoxLayout:
            size_hint: 1, 1
            Button:
                text: "New task"
                on_press: root.screen_manager.current = 'add_task_screen'
            TaskTogButton:
                id: _tog_button
                text: "Completed"
                root: root