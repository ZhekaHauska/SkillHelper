#:import task_info_screen source.task_info_screen
#:import widgets source.widgets
<TaskInfoScreen>:
    name: 'task_info_screen'
    item_name: _item_name
    item_description: _item_description
    item_time: _item_time
    item_group: _item_group
    unhide_button: _unhide_button
    hide_button: _hide_button
    options: _options
    items_view: _items_view
    control_panel: _control_panel
    deadline: _deadline
    remains: _remains
    expected_time: _expected_time
    average_speed: _average_speed
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            TaskBackButton:
                screen_manager: root.manager
                size_hint: 0.2, 1
                text: "Back"
            Label:
                id: _item_name
                text: "Name"
            Label:
                id: _item_time
                text: "Total time"
            Label:
                id: _item_group
                text: "group"
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            size_hint: None, 1
                            size: self.texture_size
                            text: "Deadline:"
                            halign: "right"
                        DeadlineLabel:
                            id: _deadline
                            screen: root
                    Label:
                        id: _remains
                        text: "Remains: "
                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:
                        orientation: "horizontal"
                        Label:
                            size_hint: None, 1
                            size: self.texture_size
                            text: "Expected time:"
                            halign: 'right'
                        ExpectedTimeLabel:
                            size_hint: 0.2, 1
                            id: _expected_time
                            screen: root
                        Label:
                            size_hint: None, 1
                            size: self.texture_size
                            text: "hours"
                            halign: 'left'
                    Label:
                        id: _average_speed
                        text: 'Average speed(expected)h/d: '
                TextInput:
                    size_hint: 1, 6
                    id: _item_description
                    text: "Description"
                    text_size: self.size
                    halign: 'left'
                    valign: 'center'
                BoxLayout:
                    id: _options
                    orientation: 'horizontal'
                    Timer:
                        id: _timer
                        add_time_amount: _add_time_amount
                    BoxLayout:
                        orientation: 'horizontal'
                        AddTaskTimeButton:
                            task_info_screen: root
                            screen_manager: root.manager
                            add_time_amount: _add_time_amount
                            timer: _timer
                            text: "Add time"
                            on_press: self.add_time()
                        TextInput:
                            id: _add_time_amount
                            text: "hours"
                            on_focus: self.text=""
                            multiline: False
                BoxLayout:
                    orientation: "horizontal"
                    HideTaskButton:
                        id: _hide_button
                        task_info_screen: root
                        screen_manager: root.manager
                        text: "Done"
                        on_press: self.hide_task()
                    UnhideTaskButton:
                        task_info_screen: root
                        screen_manager: root.manager
                        id: _unhide_button
                        text: "Duty"
                        on_press: self.unhide_task()
                    RemoveTaskButton:
                        task_info_screen: root
                        screen_manager: root.manager
                        text: "Remove"
                        on_press: self.remove_task()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, 0.1
                    text: "Задачи"
                TasksView:
                    id: _items_view
                    screen_manager: root.manager
                TaskControlPanel:
                    id: _control_panel
                    size_hint: 1, 0.1
                    screen_manager: root.manager