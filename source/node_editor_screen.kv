#:import node_editor_screen source.node_editor_screen
<NodeEditorScreen>:
    name: "node_editor_screen"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            size_hint: (1, 0.1)
            rows: 1
            Button:
                size_hint: (0.1, 1)
                text: "Back"
                on_press:
                    root.save_layout()
                    root.calculate_importance()
                    root.manager.current = "group_screen"
            Label:
        BoxLayout:
            size_hint: 1, 0.1
            Slider:
                min: 0.5
                max: 2
                step: 0.1
                value: 1
                on_value: root.node_editor.scale = self.value