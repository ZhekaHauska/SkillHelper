<NodeEditorScreen>:
    name: "node_editor_screen"
    GridLayout:
        cols: 1
        BoxLayout:
            size_hint: (1, 0.2)
            BackButton:
                on_press:
                    root.manager.current = "group_screen"
            Label:
                id: _infoc
            ApplyConnectionsButton:
                info: _infoc
                connections: root.__self__
        Slider:
            size_hint: 1, 0.1
            min: 0.5
            max: 2
            step: 0.1
            value: 1
            on_value: root.node_editor.scale = self.value

<ApplyConnectionsButton>:
    size_hint_x: None
    width: self.height
    background_normal: 'source/res/apply.png'
    background_down: 'source/res/apply_active.png'
    border: (0, 0, 0, 0)