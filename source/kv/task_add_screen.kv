<AddTaskScreen>:
    name: "add_task_screen"
    task_name: _task_name
    task_description: _task_description
    task_time: _task_time
    deadline: _deadline
    expected_time: _expected_time
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.3
            Button:
                size_hint: 0.1, 1
                text: "Back"
                on_press:
                    root.back()
            SHTextInput:
                id: _task_name
                text: "Task name"
                multiline: False
        SHTextInput:
            size_hint: 1, 3
            id: _task_description
            text: "Description"
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Start time"
                SHTextInput:
                    id: _task_time
                    text: "0"
                    multiline: False
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Deadline:"
                SHTextInput:
                    id: _deadline
                    text: "date in format(24-hour): YYYY-MM-DD hh"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Expected time:"
                SHTextInput:
                    id: _expected_time
                    text: "hours"
        AddTaskButton:
            screen_manager: root.manager
            task_name: _task_name
            task_description: _task_description
            task_time: _task_time
            deadline: _deadline
            expected_time: _expected_time
            text: "Add"
            on_press: self.add_task()