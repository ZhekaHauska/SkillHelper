<SkillInfoScreen>:
    name: 'skill_info_screen'
    item_name: _item_name
    item_description: _item_description
    item_time: _item_time
    unhide_button: _unhide_button
    hide_button: _hide_button
    item_group: _item_group
    options: _options
    items_view: _items_view
    control_panel: _control_panel
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Button:
                size_hint: 0.2, 1
                text: "Back"
                on_press:
                    root.manager.current = "skills_screen"
                    root.manager.skills_screen.refresh(root.item_group.text)
            Label:
                id: _item_name
                text: "Name"
                text_size: self.size
                halign: 'center'
                valign: 'center'
            Label:
                id: _item_time
                text: "Total time"
            Label:
                id: _item_group
                text: "Total time"
                text_size: self.size
                halign: 'center'
                valign: 'center'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                TextInput:
                    size_hint: 1, 6
                    id: _item_description
                    text: "Notes"
                    text_size: self.size
                    halign: 'left'
                    valign: 'center'
                BoxLayout:
                    id: _options
                    orientation: 'horizontal'
                    Timer:
                        id: _timer
                        add_time_amount: _add_time_amount
                    BoxLayout:
                        orientation: 'horizontal'
                        AddSkillTimeButton:
                            skill_info_screen: root
                            screen_manager: root.manager
                            add_time_amount: _add_time_amount
                            timer: _timer
                            text: "Add time"
                            on_press: self.add_time()
                        SHTextInput:
                            id: _add_time_amount
                            text: "hours"
                            multiline: False
                            valign: 'center'
                            halign: 'center'
                BoxLayout:
                    orientation: "horizontal"
                    HideSkillButton:
                        id: _hide_button
                        skill_info_screen: root
                        screen_manager: root.manager
                        text: "Hide"
                        on_press: self.hide_skill()
                    UnhideSkillButton:
                        skill_info_screen: root
                        screen_manager: root.manager
                        id: _unhide_button
                        text: "Unhide"
                        on_press: self.unhide_skill()
                    RemoveSkillButton:
                        skill_info_screen: root
                        screen_manager: root.manager
                        text: "Remove"
                        on_press: self.remove_skill()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, 0.1
                    text: "[u]Tasks[/u]"
                    markup: True
                TasksView:
                    id: _items_view
                    screen_manager: root.manager
                TaskControlPanel:
                    id: _control_panel
                    size_hint: 1, 0.1
                    screen_manager: root.manager