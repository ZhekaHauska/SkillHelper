<SkillInfoScreen>:
    name: 'skill_info_screen'
    item_name: _item_name
    item_description: _item_description
    item_time: _item_time
    hide_button: _hide_button
    item_group: _item_group
    add_time: _add_time
    timer: _timer
    items_view: _items_view
    control_panel: _control_panel
    stats: _stats
    BoxLayout:
        orientation: 'vertical'
        spacing: 16
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2
            spacing: 5
            BackButton:
                on_press:
                    root.manager.current = "skills_screen"
                    root.manager.skills_screen.refresh(root.item_group.text)
            Label:
                id: _item_name
                text: "Name"
                text_size: self.size
                halign: 'center'
                valign: 'center'
            Label:
                size_hint_x: 0.5
                id: _item_time
                text: "Total time"
            Label:
                id: _item_group
                text: "Group"
                text_size: self.size
                halign: 'center'
                valign: 'center'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1.2
            spacing: 16
            DescriptionNote:
                id: _item_description
                text: "Description"
                screen: root
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, 0.1
                    text: "[b]Tasks[/b]"
                    markup: True
                TasksView:
                    id: _items_view
                    screen_manager: root.manager
        BoxLayout:
            orientation: "horizontal"
            spacing: 16
            size_hint_y: 0.2
            RemoveSkillButton:
                skill_info_screen: root
                screen_manager: root.manager
                on_press: self.remove_skill()
            HideSkillButton:
                id: _hide_button
                skill_info_screen: root
                screen_manager: root.manager
                on_press: self.hide_skill()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: '[b]Time[/b]'
                    markup: True
                SHTextInput:
                    width: self.height
                    id: _add_time_amount
                    multiline: False
                    valign: 'center'
                    halign: 'center'
                    text: "0"
                    background_color: (0, 0, 0, 0)
                    foreground_color: (1, 1, 1, 1)
            AddSkillTimeButton:
                id: _add_time
                skill_info_screen: root
                screen_manager: root.manager
                add_time_amount: _add_time_amount
                timer: _timer
                on_press: self.add_time()
            Timer:
                id: _timer
                add_time_amount: _add_time_amount
            TaskControlPanel:
                id: _control_panel
                screen_manager: root.manager
            Label:
        Label:
            size_hint_y: 0.05
            id: _stats
            text: 'total'


<AddSkillTimeButton>:
    size_hint: (None, 1)
    width: self.height
    background_normal: 'source/res/add_time.png'
    background_down: 'source/res/add_time_active.png'
    border: (0, 0, 0, 0)

<HideSkillButton>:
    size_hint: (None, 1)
    width: self.height
    background_normal: 'source/res/hide.png'
    background_down: 'source/res/hide_active.png'
    border: (0, 0, 0, 0)

<RemoveSkillButton>:
    size_hint: (None, 1)
    width: self.height
    background_normal: 'source/res/delete.png'
    background_down: 'source/res/delete_active.png'
    border: (0, 0, 0, 0)