<GroupView>:
    do_scroll_x: True
    do_scroll_y: False

<SkillControlGroupPanel>:

<GroupScreen>:
    name: "group_screen"
    stats: _stats
    speed: _speed
    group_view: _group_view
    schedule_info: _schedule_info
    BoxLayout:
        orientation: 'vertical'
        spacing: 16
        GroupView:
            id: _group_view
            size_hint_y: 0.4
        ScheduleInfo:
            id: _schedule_info
        SkillControlGroupPanel:
            screen_manager: root.manager
            size_hint: 1, 0.2
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Label:
                id: _stats
            Label:
                id: _speed

<GroupButton>:
    width: self.height
    background_color: (0.255, 0.25, 1, 0.5)

<TasksItemInfo>:
    background_color: 0.255, 0.25, 1, 0.5