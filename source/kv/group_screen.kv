<GroupScreen>:
    name: "group_screen"
    stats: _stats.__self__
    speed: _speed.__self__
    group_view: _group_view.__self__
    BoxLayout:
        orientation: 'vertical'
        GroupView:
            id: _group_view
            screen_manager: root.manager.__self__
            group_screen: root.__self__
            groups: root.manager.database.data['groups']
            spacing: 1
        Label:
            text: "Skill Helper"
        SkillControlGroupPanel:
            screen_manager: root.manager.__self__
            size_hint: 1, 0.1
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Label:
                id: _stats
            Label:
                id: _speed