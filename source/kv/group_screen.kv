<GroupView>:
    do_scroll_x: True
    do_scroll_y: False

<SkillControlGroupPanel>:

<GroupScreen>:
    name: "group_screen"
    stats: _stats
    speed: _speed
    group_view: _group_view
    BoxLayout:
        orientation: 'vertical'
        GroupView:
            id: _group_view
            size_hint_y: 0.3
        Label:
            text: "Skill Helper"
        SkillControlGroupPanel:
            screen_manager: root.manager
            size_hint: 1, 0.1
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Label:
                id: _stats
            Label:
                id: _speed