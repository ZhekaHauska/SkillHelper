#:import group_screen source.group_screen
<GroupScreen>:
    name: "group_screen"
    stats: _stats
    speed: _speed
    group_view: _group_view
    BoxLayout:
        orientation: 'vertical'
        GroupView:
            id: _group_view
            screen_manager: root.manager
            group_screen: root
            groups: root.manager.database.data['groups']
        SkillControlGroupPanel:
            screen_manager: root.manager
            size_hint: 1, 0.1
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Label:
                id: _stats
            Label:
                id: _speed