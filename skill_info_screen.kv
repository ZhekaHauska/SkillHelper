#:import skill_info_screen skill_info_screen
#:import skills_screen skills_screen
<SkillInfoScreen>:
    name: 'skill_info_screen'
    item_name: _item_name
    item_description: _item_description
    item_time: _item_time
    current_item: None
    unhide_button: _unhide_button
    options: _options
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Button:
                size_hint: 0.1, 1
                text: "Back"
                on_press: root.manager.current = "skills_screen"
            Label:
                id: _item_name
                text: "Name"
            Label:
                id: _item_time
                text: "Total time"
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, 6
                    id: _item_description
                    text: "Description"
                    text_size: self.size
                    halign: 'left'
                    valign: 'center'
                BoxLayout:
                    id: _options
                    orientation: 'horizontal'
                    Timer:
                        id: _timer
                        add_time_amount: _add_time_amount
                    BoxLayout:
                        orientation: 'horizontal'
                        AddTimeButton:
                            skill_info_screen: root
                            screen_manager: root.manager
                            add_time_amount: _add_time_amount
                            timer: _timer
                            text: "Add time"
                            on_press: self.add_time()
                        TextInput:
                            id: _add_time_amount
                            text: "hours"
                            on_focus: self.text=""
                            multiline: False
                BoxLayout:
                    orientation: "horizontal"
                    HideSkillButton:
                        skill_info_screen: root
                        screen_manager: root.manager
                        text: "Hide"
                        on_press: self.hide_skill()
                    UnhideSkillButton:
                        skill_info_screen: root
                        screen_manager: root.manager
                        id: _unhide_button
                        text: "Unhide"
                        on_press: self.unhide_skill()
                    EditSkillButton:
                        skill_info_screen: root
                        screen_manager: root.manager
                        text: "Edit"
                        on_press: self.edit_item()
                    RemoveSkillButton:
                        skill_info_screen: root
                        screen_manager: root.manager
                        text: "Remove"
                        on_press: self.remove_skill()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, 0.1
                    text: "Задачи"
                TasksView:
                    id: _items_view
                    screen_manager: root.manager
                TaskControlPanel:
                    size_hint: 1, 0.1
                    screen_manager: root.manager