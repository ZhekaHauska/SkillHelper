#:import skill_info_screen skill_info_screen
<SkillInfoScreen>:
    name: 'skill_info_screen'
    item_name: _item_name
    item_description: _item_description
    item_time: _item_time
    item_id: 0
    unhide_button: _unhide_button
    options: _options
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.3
            Button:
                size_hint: 0.1, 1
                text: "Back"
                on_press: root.manager.current = "skills_screen"
            Label:
                id: _item_name
                text: "Skill name"
            Label:
                id: _item_time
                text: "Total time"
        Label:
            size_hint: 1, 3
            id: _item_description
            text: "Description"
        AnchorLayout:
            size_hint: 1, 2
            id: _options
            BoxLayout:
                orientation: 'vertical'
                Timer:
                    id: _timer
                    add_time_amount: _add_time_amount
                BoxLayout:
                    orientation: 'horizontal'
                    AddTimeButton:
                        skill_info_screen: root
                        screen_manager: root.manager
                        add_time_amount: _add_time_amount
                        timer: _timer
                        text: "Add time"
                        on_press: self.add_time()
                    TextInput:
                        id: _add_time_amount
                        text: "hours"
                        on_focus: self.text=""
                        multiline: False

                HideSkillButton:
                    skill_info_screen: root
                    screen_manager: root.manager
                    text: "Hide skill"
                    on_press: self.hide_skill()
        BoxLayout:
            orientation: "horizontal"
            UnhideSkillButton:
                skill_info_screen: root
                screen_manager: root.manager
                id: _unhide_button
                text: "Unhide skill"
                on_press: self.unhide_skill()
            RemoveSkillButton:
                skill_info_screen: root
                screen_manager: root.manager
                text: "Remove skill"
                on_press: self.remove_skill()