#:import skills_screen skills_screen
<SkillsScreen>:
    name: "skills_screen"
    items_view: _items_view
    stats: _stats
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, 0.1
            anchor_x: 'left'
            anchor_y: 'top'
            BoxLayout:
                size_hint: 0.5, 1
                orientation: 'horizontal'
                Button:
                    text: "Back"
                    on_press:
                        root.manager.current = "group_screen"
                        root.manager.db_skills.current_group = None
        SkillsView:
            id: _items_view
            screen_manager: root.manager
        SkillControlPanel:
            screen_manager: root.manager
            size_hint: 1, 0.1
        Label:
            size_hint: 1, 0.05
            id: _stats


