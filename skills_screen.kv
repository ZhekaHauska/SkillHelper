<SkillsScreen@Screen>:
    name: "skills_screen"
    items_view: _items_view
    stats: _stats
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, 0.1
            anchor_x: 'left'
            anchor_y: 'top'
            BoxLayout:
                size_hint: 0.5, 1
                orientation: 'horizontal'
                Button:
                    text: "Skills"
                    state: "down"
                    disabled: True
                Button:
                    text: "Tasks"
                    on_press:
                        root.manager.current = "tasks_screen"
        SkillsView:
            id: _items_view
            screen_manager: root.manager
        SkillControlPanel:
            screen_manager: root.manager
            size_hint: 1, 0.1
        Label:
            size_hint: 1, 0.05
            id: _stats


