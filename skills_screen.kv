<SkillsScreen@Screen>:
    name: "skills_screen"
    items_view: _items_view
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, 0.1
            anchor_x: 'left'
            anchor_y: 'top'
            BoxLayout:
                size_hint: 0.5, 1
                orientation: 'horizontal'
                ToggleButton:
                    text: "Skills"
                    state: "down"
                    group: "skill_switch"
                ToggleButton:
                    text: "Tasks"
                    group: "skill_switch"
                    on_state:
                        root.manager.current = "tasks_screen"
        SkillsView:
            id: _items_view
            screen_manager: root.manager
        SkillControlPanel:
            screen_manager: root.manager
            size_hint: 1, 0.1


