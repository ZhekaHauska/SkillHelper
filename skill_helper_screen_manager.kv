#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<SkillHelperScreenManager>:
    skill_info_screen: _skill_info_screen
    skills_screen: _skills_screen
    edit_skill_screen: _edit_skill_screen

    task_info_screen: _task_info_screen
    tasks_screen: _tasks_screen
    edit_task_screen: _edit_task_screen

    transition: FadeTransition()

    SkillsScreen:
        id: _skills_screen
    SkillInfoScreen:
        id: _skill_info_screen
    AddSkillScreen:
        screen_manager: root
    EditSkillScreen:
        id: _edit_skill_screen
    
    TasksScreen:
        id: _tasks_screen
    TaskInfoScreen:
        id: _task_info_screen
    AddTaskScreen:
        screen_manager: root
    EditTaskScreen:
        id: _edit_task_screen