#:import skill_helper_widgets skill_helper_widgets
<SkillItem>:
    orientation: 'horizontal'
    name: ""
    max_time: 100
    time: 0
    description: ""
    item_id: 0
    Label:
        text: root.name
    ProgressBar:
        value_normalized: float(root.time / root.max_time) if root.max_time > 0 else 0

    Label:
        text: str(round(root.time, 2))

<TaskItem>:
    orientation: 'horizontal'
    name: ""
    max_time: 100
    time: 0
    description: ""
    item_id: 0
    Label:
        text: root.name
    ProgressBar:
        value_normalized: float(root.time / root.max_time) if root.max_time > 0 else 0

    Label:
        text: str(round(root.time, 2))


<Timer>:
    orientation: 'vertical'
    timer: _timer
    Label:
        id: _timer
        text: "Timer"
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Start"
            on_press: root.start()
        Button:
            text: "Pause"
            on_press: root.pause()
        Button:
            text: "Finish"
            on_press: root.finish()
